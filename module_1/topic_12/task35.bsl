Люди = Новый массив(4);
Для Шаг = 0 По 3 Цикл
	Люди[Шаг] = Новый Структура("Имя, Вес");
	ВвестиСтроку(Люди[Шаг].Имя);
	ВвестиЧисло(Люди[Шаг].Вес);
КонецЦикла;

ИмяЛегкого = Люди[0].Имя;
МинВес = Люди[0].Вес;

Для Шаг = 1 По 3 Цикл
	Если Люди[Шаг].Вес < МинВес Тогда
		МинВес = Люди[Шаг].Вес;
		ИмяЛегкого = Люди[Шаг].Имя;
	КонецЕсли
КонецЦикла;

ОткрытьЗначение(
	"Самый Легкий человек - " +
	ИмяЛегкого + ". Ему " +
	МинВес + " лет."
);