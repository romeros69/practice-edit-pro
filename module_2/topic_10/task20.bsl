// Модуль уроки
Функция Резулт(А) Экспорт
	НовыйМассив = Новый Массив(А.Количество());
	Для Ш = 1 По А.Количество() - 1 Цикл
		НовыйМассив[Ш] = А[Ш] * Ш; 
	КонецЦикла;
	Возврат НовыйМассив;
КонецФункции

// Основной модуль
Н = Новый Массив(3);
Н[0] = 1;
Н[1] = 2;
Н[2] = 3;
О = Уроки.Резулт(Н);
В = "";
Для Ш = 1 По О.Количество() - 1 Цикл
	В = В + О[Ш] + " "; 
КонецЦикла;
Сообщить(В);